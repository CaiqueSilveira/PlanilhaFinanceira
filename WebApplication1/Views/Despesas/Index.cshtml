@model IEnumerable<WebApplication1.Models.Classes.Despesa>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoDespesa.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeDespesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SaldoPar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaractDespesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataRealizacao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipoDespesa.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeDespesa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SaldoPar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CaractDespesa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataRealizacao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }
    <tfoot class="footer">
        <tr>
            <td colspan="2"><b>Total</b></td>
            <td colspan="3">@Html.Raw(String.Format("<b>R$ {0:n2}</b>", @Model.Sum(i => i.Valor)))</td>
        </tr>
    </tfoot>
</table>
